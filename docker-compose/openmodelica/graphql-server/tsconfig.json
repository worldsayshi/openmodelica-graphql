{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "es2018", "dom"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    //"rootDirs": ["src"], // ,"test"
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "test",
    "build"
  ]
}